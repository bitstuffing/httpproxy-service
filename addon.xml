<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="org.harddevelop.kodi.proxy"
       name="httpproxy"
       version="1.0.0"
       provider-name="bit">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.service" library="proxy2.py" start="login" >
      <provides>program</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">HTTP proxy with custom rules to get working some providers without recompile platform dependencies</summary>
  </extension>
</addon>
